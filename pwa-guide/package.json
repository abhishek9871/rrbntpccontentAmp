{
  "name": "offline-educational-pwa",
  "version": "1.0.0",
  "description": "Offline-first Progressive Web App for educational content with ZIM reader integration",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:zim && npm run build:pwa",
    "build:zim": "node scripts/build-zim.js",
    "build:pwa": "node scripts/build-pwa.js",
    "serve": "http-server . -p 8080 --cors",
    "dev": "concurrently \"npm run serve\" \"npm run watch\"",
    "watch": "chokidar \"content/**/*\" -c \"npm run build\"",
    "lint": "eslint src/",
    "test": "jest",
    "optimize": "node scripts/optimize-content.js",
    "compress": "node scripts/compress-assets.js"
  },
  "keywords": [
    "pwa",
    "offline",
    "education",
    "zim",
    "kiwix",
    "service-worker",
    "cache"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "dependencies": {
    "kiwix-js": "^2.5.0",
    "fuse.js": "^7.0.0",
    "dexie": "^3.2.4"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "concurrently": "^8.2.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "yauzl": "^2.10.0",
    "archiver": "^6.0.1",
    "pako": "^2.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
